.list_card-wrapper {
  margin-bottom: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.list_card {
  background-color: #fff;
  padding: 15rpx 20rpx 10rpx 20rpx;
  border: solid 1px #eee;
  /*border-top: solid 2rpx #FF0000;*/
  /*border-top-left-radius: 12rpx;
  border-top-right-radius: 12rpx;*/
  margin-left:auto;
  margin-right:auto;
  /*box-shadow:1px 1px 1px 1px rgba(0, 0, 0, 0.1)*/
}

.list_shouldDo {
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
}

.list_label {
  color: #000;
}

.list_card-content {
  flex: 1;
  background-color: #f6f6f6;
  padding: 15rpx;
  margin-left: 30rpx;
  border-radius:5rpx;
}

.list_card-top {
  display: flex;
  align-items: center;
  padding-bottom: 10rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  border-bottom: solid 1px #eee;
}


.list_card-top-listDate {
  color: #ccc;
  flex: 1;
  text-align: right;
}

