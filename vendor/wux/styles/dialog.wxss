.wux-dialog {
  position: fixed;
  z-index: 5000;
  width: 80%;
  max-width: 300px;
  top: 40%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #FFFFFF;
  text-align: center;
  border-radius: 3px;
  overflow: hidden;
  border: 1px solid #D5D5D6
}

.wux-dialog__hd {
  padding: 1.0em 1.6em 0.5em;
}

.wux-dialog__title {
  font-weight: 400;
  font-size: 18px;
}

.wux-dialog__bd {
  padding: 0 1.6em 1.0em;
  min-height: 40px;
  font-size: 15px;
  line-height: 1.3;
  word-wrap: break-word;
  word-break: break-all;
  color: #999999;
}

.wux-dialog__bd:first-child {
  padding: 2.7em 20px 1.7em;
  color: #353535;
}

.wux-dialog__ft {
  position: relative;
  line-height: 40px;
  font-size: 16px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.wux-dialog__ft:after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  height: 1px;
  border-top: 1px solid #D5D5D6;
  color: #D5D5D6;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
}

.wux-dialog__btn {
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  color: #3CC51F;
  text-decoration: none;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  position: relative;
}

.wux-dialog__btn:active {
  background-color: #EEEEEE;
}

.wux-dialog__btn:after {
  content: " ";
  position: absolute;
  left: 0;
  top: 0;
  width: 1px;
  bottom: 0;
  border-left: 1px solid #D5D5D6;
  color: #D5D5D6;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
}

.wux-dialog__btn:first-child:after {
  display: none;
}

.wux-dialog__btn_default {
  color: #353535;
}

.wux-dialog__btn_primary {
  color: #F5A623;
}

.wux-dialog__bd .wux-prompt-input {
  padding: 4px 6px;
  border: 1px solid #ccc;
  height: 2em;
  width: 100%;
  margin-top: 10px;
  text-align: left;
  box-sizing: border-box;
}

.wux-dialog__ft.wux-dialog__btns_vertical {
  display: block;
  height: auto;
}

.wux-dialog__btns_vertical .wux-dialog__btn:after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  right: auto;
  top: auto;
  height: 1px;
  width: 100%;
  background-color: #D5D5D6;
  display: block;
  z-index: 15;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
}

.wux-dialog__btns_vertical .wux-dialog__btn:last-child:after {
  display: none;
}

.wux-dialog__btn.wux-dialog__btn_bold {
  font-weight: 500;
}
